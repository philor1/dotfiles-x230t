####################################################################
##### settings
####################################################################

map i recolor
map b toggle_statusbar

set sandbox none
set selection-clipboard clipboard
set adjust-open best-fit

set font "TerminessTTF Nerd Font 12"

####################################################################
##### colors
####################################################################

##### base16-colors
%%OFF%%set notification-error-bg       "%%base00%%" # bg
%%OFF%%set notification-error-fg       "%%base08%%" # bright:red
%%OFF%%set notification-warning-bg     "%%base00%%" # bg
%%OFF%%set notification-warning-fg     "%%base0A%%" # bright:yellow
%%OFF%%set notification-bg             "%%base00%%" # bg
%%OFF%%set notification-fg             "%%base0B%%" # bright:green

%%OFF%%set completion-bg               "%%base02%%" # bg2
%%OFF%%set completion-fg               "%%base06%%" # fg
%%OFF%%set completion-group-bg         "%%base01%%" # bg1
%%OFF%%set completion-group-fg         "%%base04%%" # gray
%%OFF%%set completion-highlight-bg     "%%base0D%%" # bright:blue
%%OFF%%set completion-highlight-fg     "%%base02%%" # bg2

# Define the color in index mode
%%OFF%%set index-bg                    "%%base02%%" # bg2
%%OFF%%set index-fg                    "%%base06%%" # fg
%%OFF%%set index-active-bg             "%%base0D%%" # bright:blue
%%OFF%%set index-active-fg             "%%base02%%" # bg2

%%OFF%%set inputbar-bg                 "%%base00%%" # bg
%%OFF%%set inputbar-fg                 "%%base06%%" # fg

%%OFF%%set statusbar-bg                "%%base02%%" # bg2
%%OFF%%set statusbar-fg                "%%base06%%" # fg

%%OFF%%set highlight-color             "%%base0A%%" # bright:yellow
%%OFF%%set highlight-active-color      "%%base09%%" # bright:orange

%%OFF%%set default-bg                  "%%base00%%" # bg
%%OFF%%set default-fg                  "%%base06%%" # fg
%%OFF%%set render-loading              true
%%OFF%%set render-loading-bg           "%%base00%%" # bg
%%OFF%%set render-loading-fg           "%%base06%%" # fg

# Recolor book content's color
%%OFF%%set recolor-lightcolor          "%%base00%%" # bg
%%OFF%%set recolor-darkcolor           "%%base06%%" # fg
%%OFF%%set recolor                     true
%%OFF%%set recolor-keephue             true          # keep original color

##### pywal-colors
%%BASH%%set recolor "true"
%%BASH%%set completion-bg "{background}"
%%BASH%%set completion-fg "{foreground}"
