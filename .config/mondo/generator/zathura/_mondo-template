%%BASH%%set inputbar-bg "{background}"
%%BASH%%set inputbar-fg "{foreground}"
%%BASH%%set notification-bg "{background}"
%%BASH%%set notification-fg "{foreground}"
%%BASH%%set notification-error-bg "{color1}"
%%BASH%%set notification-error-fg "{foreground}"
%%BASH%%set notification-warning-bg "{color1}"
%%BASH%%set notification-warning-fg "{foreground}"
%%BASH%%set statusbar-bg "{background}"
%%BASH%%set statusbar-fg "{foreground}"
%%BASH%%set index-bg "{background}"
%%BASH%%set index-fg "{foreground}"
%%BASH%%set index-active-bg "{foreground}"
%%BASH%%set index-active-fg "{background}"
%%BASH%%set render-loading-bg "{background}"
%%BASH%%set render-loading-fg "{foreground}"
%%BASH%%set window-title-home-tilde true
