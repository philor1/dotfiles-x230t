####################################################################
##### settings
####################################################################

map i recolor
map b toggle_statusbar

set sandbox none
set selection-clipboard clipboard
set adjust-open best-fit

set font "TerminessTTF Nerd Font 12"

####################################################################
##### colors
####################################################################

##### base16-colors
set notification-error-bg       "#fdf6e3" # bg
set notification-error-fg       "#dc322f" # bright:red
set notification-warning-bg     "#fdf6e3" # bg
set notification-warning-fg     "#b58900" # bright:yellow
set notification-bg             "#fdf6e3" # bg
set notification-fg             "#859900" # bright:green

set completion-bg               "#93a1a1" # bg2
set completion-fg               "#073642" # fg
set completion-group-bg         "#eee8d5" # bg1
set completion-group-fg         "#657b83" # gray
set completion-highlight-bg     "#268bd2" # bright:blue
set completion-highlight-fg     "#93a1a1" # bg2

# Define the color in index mode
set index-bg                    "#93a1a1" # bg2
set index-fg                    "#073642" # fg
set index-active-bg             "#268bd2" # bright:blue
set index-active-fg             "#93a1a1" # bg2

set inputbar-bg                 "#fdf6e3" # bg
set inputbar-fg                 "#073642" # fg

set statusbar-bg                "#93a1a1" # bg2
set statusbar-fg                "#073642" # fg

set highlight-color             "#b58900" # bright:yellow
set highlight-active-color      "#cb4b16" # bright:orange

set default-bg                  "#fdf6e3" # bg
set default-fg                  "#073642" # fg
set render-loading              true
set render-loading-bg           "#fdf6e3" # bg
set render-loading-fg           "#073642" # fg

# Recolor book content's color
set recolor-lightcolor          "#fdf6e3" # bg
set recolor-darkcolor           "#073642" # fg
set recolor                     true
set recolor-keephue             true          # keep original color

