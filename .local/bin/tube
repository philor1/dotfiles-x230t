#!/bin/sh


audiosel pipe
#audiosel pulse

##### debugger ############################################
case "$1" in
	update)
youtube-dl --rm-cache-dir
rm /home/philipp/.config/mps-youtube/cache_py* 2> /dev/null
if [ -t 0 ] ; then
    mpsyt set api_key AIzaSyAY9GC9htXOmzIKq1WaLPG0yYDaSBUrgxI
else
    st -e mpsyt set api_key AIzaSyAY9GC9htXOmzIKq1WaLPG0yYDaSBUrgxI &
fi
exit 1
esac
############################################################


##### tmux-session #########################################
rm ~/.config/mps-youtube/cache_py* 2> /dev/null
if [ -t 0 ] ; then
    mpsyt "$@"
else
	if [ $# -eq 0 ]; then
		st -u -t tube -e /home/philipp/.config/zsh/tube/tmux
	else
		st -u -e mpsyt "$@" &
	fi
fi
############################################################
